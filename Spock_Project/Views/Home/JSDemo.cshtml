        <p id="sum"></p>
    </div>
    <div class="col-md-6">
        <p id="mult"></p>
    </div>
</div>


<!--How do I interact with Document Object Model(DOM)-->
<!--Step 1: Get the data.
Step 2: Do Something with the data like make a calculation.
Step 3: Show the result to the user.

-->

@section scripts{

    <script>
        $("#btn1").click(function () {
            //Step 1 Get the user data
            var num1 = Number($("#input1").val());
            var num2 = +$("#input2").val();

            //Step 2 Do something with the data.
            var sum = num1 + num2;
            var mult = num1 * num2;

            //Step 3 Display the results
            $("#sum").text("The sum is: " + sum);
            $("#mult").text("The product is: " + mult);


        })
    </script>}
